<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <WebView
                android:id="@+id/webview_bookmark_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="72sp" />

            <me.yiye.customwidget.SmoothProgressBar
                android:id="@+id/progressbar_web"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="3dip"
                android:indeterminateOnly="false"
                android:max="100" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/view_bookmark_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/content_bottom_style"
            android:paddingTop="1dp"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/imagebutton_bookmark_commentary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/comment"
                android:text="评论 12"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imagebutton_bookmark_favour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/night"
                android:text="收藏 2"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imagebutton_bookmark_praise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/share"
                android:text="赞 11"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_bookmark_commentary"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:background="@color/activitybackgroud"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/content_margin"
                android:text="施工中" />

            <TextView
                android:id="@+id/btn_bookmark_commentary_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/content_margin"
                android:background="@drawable/btn_style"
                android:text="关闭"
                android:textColor="@color/PUERWHITE"
                android:textSize="14sp"
                android:padding="5dp"/>
        </RelativeLayout>

        <include layout="@layout/item_commom_divider_style" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="test"
            android:textSize="34sp" />

        <include layout="@layout/item_commom_divider_style" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="评论" />
    </LinearLayout>

</FrameLayout>