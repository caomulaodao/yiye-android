<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activitybackgroud" >

    <ImageView
        android:id="@+id/imageview_personal_header"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/person_header_test" />

    <me.yiye.customwidget.CircularImage
        android:id="@+id/imageview_personal_userimg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageview_personal_header"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-45dp"
        android:src="@drawable/miaotouxiang" />

    <Button
        android:id="@+id/btn_personal_myfavor"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/imageview_personal_header"
        android:layout_marginTop="88dp"
        android:background="@color/PUERWHITE"
        android:gravity="center"
        android:text="我的收藏" />

    <Button
        android:id="@+id/btn_personal_about"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/btn_personal_myfavor"
        android:layout_marginTop="26dp"
        android:background="@color/PUERWHITE"
        android:gravity="center"
        android:text="关于" />

    <View
        android:id="@+id/view_personal_divider1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_personal_about"
        android:background="@drawable/divider_style" />

    <Button
        android:id="@+id/btn_personal_login"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view_personal_divider1"
        android:background="@color/PUERWHITE"
        android:gravity="center"
        android:text="登陆" />

</RelativeLayout>