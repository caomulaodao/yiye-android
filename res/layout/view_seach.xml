<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textview_search_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="发现网络之美"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/edittext_search_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textview_search_tip"
            android:layout_alignRight="@+id/textview_search_tip"
            android:layout_below="@id/textview_search_tip"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:singleLine="true" />
    </RelativeLayout>

    <include layout="@layout/item_commom_divider_style"
        android:layout_marginTop="10dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:id="@+id/listview_search_classes"
        android:divider="@drawable/divider_style"
        android:dividerHeight="1dp" />
</LinearLayout>